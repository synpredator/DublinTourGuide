<h1>Listing Bookings</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Booking ID</th>
      <th>User ID</th>
      <th>Tour</th>
      <th width="200">Order Details</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td>#<%= booking.id %></td>
        <td>#<%= booking.user_id %></td>
        <td>#<%= booking.tour_time_id %></td>
        <td><%= link_to 'Show', booking, class: "btn btn-default btn-sm btn-block" %></td>
        <td width="100"><%= link_to 'Edit', edit_booking_path(booking), class: "btn btn-warning btn-sm btn-block" %></td>
        <td width="100"><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

