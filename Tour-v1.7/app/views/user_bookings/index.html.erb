<p id="notice"><%= notice %></p>

<h1>Listing User Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Booking</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_bookings.each do |user_booking| %>
      <tr>
        <td><%= user_booking.booking.id %></td>
        <td><%= user_booking.user.email %></td>
        <td><%= link_to 'Show', user_booking %></td>
        <td><%= link_to 'Edit', edit_user_booking_path(user_booking) %></td>
        <td><%= link_to 'Destroy', user_booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

