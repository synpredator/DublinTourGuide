<div class="container">
      <div class="row">
 
        <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 col-xs-offset-0 col-sm-offset-0 col-md-offset-1 col-lg-offset-1 toppad" >
   
   
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Welcome back <%= @user.first_name %>,</h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center">
                  <%= image_tag("tourist_group-512.png", class: "img-circle img-responsive") %>
                 
                </div>

                <div class=" col-md-9 col-lg-9 "> 
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>Full Name</td>
                        <td><%= full_name %></td>
                      </tr>
                      <tr>
                        <td>Email</td>
                        <td><a href="mailto:<%= @user.email %>"><%= @user.email %></a></td>
                      </tr>
                      <tr>
                        <td>Date of Birth</td>
                        <td><%= @user.date_of_birth.to_date %></td>
                      </tr>
                      <tr>
                        <td>Home Address</td>
                        <td><%= @user.address %></td>
                      </tr>
                      <tr>
                        <td>City</td>
                        <td><%= @user.city %></td>
                      </tr>                      
                      <tr>
                        <td>Country</td>
                        <td><%= @user.country %></td>
                      </tr>
                      <tr>
                        <td>Zip Code</td>
                        <td><%= @user.zipcode %></td>
                      </tr>                      
                      <tr>
                        <td>Phone Number</td>
                 <td><%= @user.home_phone %> <em>(Landline)</em><br><br><%= @user.mobile_phone %> <em>(Mobile)</em>
                        </td>
                      </tr>
                     
                    </tbody>
                  </table>
 
                </div>
              </div>
            </div>
            
                 <div class="panel-footer text-right">
                   <%=link_to '<i class="glyphicon glyphicon-edit"></i> Edit profile'.html_safe, edit_user_registration_path, :class=>"btn btn-sm btn-warning" %>
                    <%=link_to '<i class="glyphicon glyphicon-remove"></i> Logout'.html_safe, destroy_user_session_path,:class=>"btn btn-sm btn-danger", :method=> :delete %>

                    </div>
            
          </div>
          <hr />
          <h3>Previous Tour Orders</h3>
              <% if @user.bookings.blank? %>
            <h5>You have no current orders</h5>
            <%= link_to "Order a Tour", tours_path, :class=> "btn btn-danger" %>
            <br />
            <br /><br />
          <% else %>
         <table class="table">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Tour ID</th>
      <th>Tour Date </th>
      <th>Tour Time</th>
      <th>Order Status</th>
      <th width="50"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.bookings.each do |order| %>
      <tr>
        <td># <%= order.id %></td>
        <td><%= order.tour_id %></td>
        <td><%= order.tour_time.departure_date.strftime("%d/%m/%Y") %></td>
        <td><%= order.tour_time.departure_date.strftime("%H:%M") %></td>
        <td><span class="label label-success">Order Success</span></td>
        <td><%= link_to 'More Information', booking_path(order), :class=>"btn btn-sm btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
       
        <% end %>

         
</div>

</div>

</div>